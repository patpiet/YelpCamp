<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create a New Campground</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" placeholder="Campground name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" placeholder="Campground url">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[description]" placeholder="Campground description">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="campground[price]" placeholder="Campground price" min="0.01" step="0.01">
				</div>				
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
			</form>	

			<a href="/campgrounds">Go Back</a>	
		</div>
		
	</div>	
</div>

<%- include("../partials/footer") %>