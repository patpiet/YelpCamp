<%- include("../partials/header") %>

<div class="container">
	<div class="jumbotron">
		<h1>Welcome to YelpCamp!</h1>
		<p>View our hand-picked campgrounds from all over the wordl!</p>
		<p>
			<a class="btn btn-primary btn-lg" href="campgrounds/new">Add new Campground</a>
		</p>
	</div>
	<div class="row text-center"  style="display:flex; flex-wrap: wrap;">
			<% campgrounds.forEach(function(campground){ %>
		<div class="col-sm-6 col-md-3">
			<div class="thumbnail">
				<img src="<%= campground.image %>" alt="">
			</div>
			<div class="caption">
				<h4><%= campground.name %></h4>
				<p>
					<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-lg">See more</a>
				</p>
			</div>
		</div>			
			<% }) %>
	</div>
</div>	

<%- include("../partials/footer") %>